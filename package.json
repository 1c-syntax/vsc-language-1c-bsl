{
    "name": "language-1c-bsl",
    "displayName": "Language 1C (BSL)",
    "description": "Syntax highlighting for 1C:Enterprise 8.",
    "icon": "images/xDDIcon.png",
    "version": "1.3.3",
    "publisher": "xDrivenDevelopment",
    "galleryBanner": {
        "color": "#0000FF",
        "theme": "dark"
    },
    "license": "LICENSE.md",
    "bugs": {
        "url": "https://github.com/xDrivenDevelopment/vsc-language-1c-bsl/issues"
    },
    "homepage": "https://github.com/xDrivenDevelopment/vsc-language-1c-bsl/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/xDrivenDevelopment/vsc-language-1c-bsl.git"
    },
    "categories": [
        "Languages"
    ],
    "engines": {
        "vscode": "0.10.x"
    },
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
    },
    "activationEvents": [
        "onLanguage:bsl",
        "onLanguage:sdbl", 
        "onCommand:bsl.update"
    ],
    "contributes": {
        "commands": [
            {
                "command": "bsl.update",
                "title": "reference cache update for bsl",
                "category": "bsl"
            }   
        ],
        "configuration": {
            "title": "Language 1C (BSL) configuration",
            "properties": {
                "language-1c-bsl.enableOneScriptLinter": {
                    "description": "Lint files through `OneScript -check` command",
                    "type": "boolean",
                    "default": true                  
                },
                "language-1c-bsl.lintBSLFiles": {
                    "description": "Enable this if you want to check `*.bsl` files via OneScriptLint",
                    "type": "boolean",
                    "default": false                        
                },
                "language-1c-bsl.languageAutocomplite": {
                    "description": "Autocomplite language en/ru",
                    "type": "string",
                    "default": "ru"                  
                }
            }
        },
        "languages": [
            {
                "id": "bsl",
                "extensions": [ ".bsl", ".os" ],
                "aliases": [ "1C (BSL)", "BSL" ]
            },
            {
                "id": "sdbl",
                "aliases": [ "1C (Query)", "SDBL" ]
            }
        ],
        "grammars": [
            {
                "language": "bsl",
                "scopeName": "source.bsl",
                "path": "./syntaxes/1c.tmLanguage"
            },
            {
                "language": "sdbl",
                "scopeName": "source.sdbl",
                "path": "./syntaxes/1c-query.tmLanguage"
            }
        ]
    },
    "devDependencies": {
    "typescript": "^1.6.2",
    "vscode": "0.10.x"
  },
  "dependencies": {
    "child-process-promise": "^1.1.0",
    "fs-readfile-promise": "^2.0.1",
    "iconv-lite": "^0.4.13",
    "lokijs": "^1.3.11",
    "onec-syntaxparser": "^0.1.4",
    "underscore": "^1.8.3"
  }
	
}
